<div class="row mt-5 py-5">
    <div class="col-md-5 m-auto">
        <div class="card card-body">
            <h4 class="text-center">User Login</h4>
            <form action="/products/login" method="POST">
                <%- include('./partials/errors.ejs') %> 
                <div class="row mt-3">
                    <label for="email" class="col-sm-3 col-form-label ps-5">Email: </label>
                    <div class="col-sm-7">
                        <input type="email" name="email" id="email" class="form-control">
                    </div>
                </div>
                <div class="row mt-3">
                    <label for="password" class="col-sm-3 col-form-label ps-5">Password: </label>
                    <div class="col-sm-7">
                        <input type="password" name="password" id="password" class="form-control">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="d-grid col-8 m-auto  mb-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="d-grid col-8 m-auto  mb-2">
                        <p class="lead">Don't Have an Account?<a href="/products/register"  >Sign In</a></p>
                    </div>
                </div>
            </form> 
        </div>
    </div>
</div>